{
  "name": "git-blame-vsc",
  "displayName": "git-blame-vsc",
  "description": "lightweight git blame overlay",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-blame-vsc.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "git-blame-vsc.clearOverlay",
        "title": "Clear Line Overlay"
      }
    ],
    "configuration": {
      "title": "Git Blame Overlay",
      "properties": {
        "gitBlameOverlay.backgroundColor": {
          "type": "string",
          "description": "Background color of the overlay text (hex color, e.g., '#FFD700'). If not set, matches editor background."
        },
        "gitBlameOverlay.textColor": {
          "type": "string",
          "description": "Text color of the overlay content (hex color, e.g., '#000000'). If not set, matches editor foreground."
        },
        "gitBlameOverlay.borderColor": {
          "type": "string",
          "description": "Border color of the overlay (hex color, e.g., '#FFA500'). If not set, uses editor accent color."
        },
        "gitBlameOverlay.fontWeight": {
          "type": "string",
          "enum": ["normal", "bold", "lighter", "900"],
          "default": "bold",
          "description": "Font weight for overlay text"
        },
        "gitBlameOverlay.marginLeft": {
          "type": "string",
          "default": "1rem",
          "description": "Left margin spacing before overlay text"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
